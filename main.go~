package main

import (
	"vrka"
	"net"
	"fmt"
	"bufio"
	"os"
)


func main() {

	args := os.Args

	port := "9091"

	if args != nil && len(args) >= 2 {
		port = args[2]
	}

	portString := ":"+port

	fmt.Println("starting vrka on 9091")
	ln, _ := net.Listen("tcp", portString)   
	// accept connection on port   
	con,err  := ln.Accept() 
}
